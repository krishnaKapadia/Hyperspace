{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "preserve",
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "lib": [
      "es5",
      "dom",
      "es2015"
    ],
    "allowJs": true,
    "checkJs": false,
    "types": [],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "src"
  ]
}
